#!/usr/bin/env bash

# -------------------------------------------------------------
# "BU.DevBin.LibCompilerV4.Functions.CompilerUsage()" function.

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__USAGE="Usage : ./path/to/lib-compilerV4.sh [MANDATORY ARG] [OPTIONAL ARGS]...";
declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__PROGRAM_DESC="Compiles the content of the Bash Utils framework's basic files and its main module into a single file.";

# ----------------------------------------------------------------------------------
# "BU.DevBin.LibCompilerV4.Functions.CompilerUsage()" function : mandatory argument.

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__MANDATORY_ARG="Mandatory argument (use ONLY one of them) :";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__MANDATORY_ARG__LANG="
    --lang=[ARRAY]                      array of languages ISO 639-1 codes. This option creates a compiled file for each language.

                                        Each value represents the ISO 639-1 code of the language in which the messages and the top-level comments of
                                        each compiled file must be translated, as well as the one of the individual translation file which contains
                                        the translated messages used during the initialization processus of the Bash Utils framework, and whose
                                        content must be embedded in each final file during the compilation process.

                                        This translation file can be found in the '.Bash-utils/config/initializer/locale' folder, and is named :
                                        '\${iso_639-1_code}.locale'

                                        Each of these ISO 639-1 codes must be separated by a delimiter, which can be any of the following (NO BLANK
                                        SPACES IS ALLOWED BETWEEN EACH CODE) : ,;|~_.:!§

                                        If, among the ISO 639-1 codes passed, the 'en' (English) code is absent, then the English translation file
                                        is shipped into the compiled file for security reasons : if the translation file of the currently wanted is
                                        incomplete, and / or if the final user tries to use another language while using this compiled file, so that
                                        the program's messages can still be displayed into plain text instead of empty strings.

                                        If the 'supported' value is passed after the '=' sign, then a compiled file is created for each language
                                        supported by the compiler, still in the same way as for each ISO 639-1 code passed to the compiler after
                                        the '--lang=' option

                                        Else, if the 'all' value is passed after the '=' sign, then a compiled file is created for every language,
                                        including the ones not supported by the compiler and / or whose associated translation file is incomplete
                                        and / or obsolete.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__MANDATORY_ARG__LANG_INCLUDE="
    --lang-include=[ARRAY]              array of languages ISO 639-1 codes. This option creates a compiled file embedding the linguistic content
                                        of each translation file used during the initialization process of the Bash utils framework.

                                        Each value represents the ISO 639-1 code of the language of each individual translation file mentioned in
                                        the paragraph above, and whose content must be embedded in the final file during the compilation process.

                                        Each of these translation files is located in the folder mentioned into the description of the '--lang='
                                        option described above, and has the same file name.

                                        Each of these ISO 639-1 codes must be separated by a delimiter, which can be any of the following (NO BLANK
                                        SPACES IS ALLOWED BETWEEN EACH CODE) : ,;|~_.:!§

                                        If, among the ISO 639-1 codes passed, the 'en' (English) code is absent, then the same procedure mentioned
                                        into the description of the '--lang=' option described above is applied for the same mentioned reasons.

                                        If the 'supported' value is passed after the '=' sign, then the content of the translation file of each
                                        language supported by the compiler will be written into the compiled file, with their function that defines
                                        each of the variables containing the translated strings.

                                        Else, if the 'all' value is passed after the '=' sign, then the content of EVERY translation files will be
                                        written into the compiled file, including the files of the languages not supported by the compiler and / or
                                        whose translation is incomplete and / or obsolete.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__MANDATORY_ARG__HELP="
    -h --help                           replacement of the '--lang=' option. Displays on the screen the help messages and the compiler's usage
                                        instructions.";

# ----------------------------------------------------------------------------------
# "BU.DevBin.LibCompilerV4.Functions.CompilerUsage()" function : optional arguments.

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS="Optional arguments (WARNING : some options are incompatible between each other, please read carefully this help guide) :";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__COMPILATION_AUTHORS="
    -A --compilation-authors            sets the name of the author(s) of the compilation of the file into its top-level comments, except if the
                                        '-r' / '--keep-raw-document-layout' option is passed.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__COMPILATION_VERSION="
    -V --compilation-version=[VERSION]  sets the version of the compiled file, except if the '-r' / '--keep-raw-document-layout' option is passed.
                                        If the value is absent, the '1.0' version number is written into the 'version :' section.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__COMPILATION_LITE="
    -l --compile-lite                   compiles a lite version of the framework, without the functions from the modules initializer script.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__COMPILE_STABLE="
    -C --compile-stable                 sets the compiled file into a stable version. It will force the execution of the 'shellcheck' command
                                        on each file to compile processed by the compiler, and will do the same to the output file once the
                                        compilation process is done, before setting it in read-only mode. This option is incompatible with the
                                        '-s' / '--no-shellcheck' option, an error message will be returned if both options are used together.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__COMPILE_UNSTABLE="
    -c --compile-unstable               this option does actually nothing, as the compilation of an unstable version is the default behavior
                                        of the Bash Utils framework's compiler.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__DISPLAY="
    -d --display                        displays on the screen the content of the file currently processed by the compiler.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__HELP="
    -h --help                           displays on the screen the help messages and the compiler's usage instructions.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__KEEP_COMMENTS="
    -k --keep-comments                  keep each comment from the source file into the compiled file. The only ones which are not removed if this
                                        option is not passed are the Shellcheck directives and the comments from the top-level compiled file.

                                        Incompatible with the '-r' / '--keep-raw-document-layout' option.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__KEEP_EXEC_SAFEGUARDS="
    -E --keep-exec-safeguards           keep the extra safeguard pieces of code (written at the beginning of each source file) which prevent the
                                        direct execution of the said file. This option does not prevents the addition of an extra safeguard
                                        code after the top-level of the compiled file.

                                        Incompatible with the '-r' / '--keep-raw-document-layout' option.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__KEEP_FUNCTIONS_INFOS="
    -i --keep-functions-infos           keep the comments used as informations about each function, from the string separating a function from
                                        another (# ·········· ...) and the \"function\" keyword written outside of the commentaries block, and
                                        which is used to declare a function.

                                        Incompatible with the '-r' / '--keep-raw-document-layout' option.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__KEEP_FUNCTIONS_PVC_INFOS="
    -p --keep-functions-pvc-infos       keep the comments beginning with the \"#**** Parameters\", \"#**** Variables\" and \"#**** Code\" strings,
                                        which separate the parameters definition, the variables declarations and the code into the body of a function.

                                        Incompatible with the '-r' / '--keep-raw-document-layout' option.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__KEEP_RAW_DOCUMENT_LAYOUT="
    -r --keep-raw-document-layout       keep the raw compiled file's layout, without optimizing it. In this case, the aforementionned '--keep-*'
                                        options will not work.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__NO_ALIASES_INCLUDE="
    -a --no-aliases-include             does not includes the main module's aliases file into the compiled file.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__NO_ENGLISH_INCLUDE="
    -e --no-english-include             does not includes the English translation file into the output file if the framework is compiled in another
                                        language than English.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__NO_SHELLCHECK="
    -s --no-shellcheck                  prevents the execution of the 'shellcheck' command on each file processed by the compiler. This option is
                                        incompatible with the '-C' / '--compile-stable' option, an error message will be returned if both options
                                        are used together. The files which were not modified since the last error checking with this command will
                                        not be processed again.";

declare -gr __BU__BIN__LIB_COMPILER_V4__GLOBVARS__MSG_M__COMPILER_USAGE_FNCT__OPTIONAL_ARGS__REMOVE_SHELLCHECK_DIRECTIVES="
    -S --remove-shellcheck-directives   removes the Shellcheck directives from the compiled file.

                                        WARNING : Many false positive will be returned by Shellcheck if you decide to execute this program with the
                                        compiled file, so this option is incompatible with the '--compile-stable' option.";


